pipeline{
agent any
stages
{
stage('Build')
{
steps{
echo "Building the code....."
bat "mvn clean"
}
}
post{
success{
emailext body: 'Email sent out from Jenkins', subject: 'Jenkins Build', to: 'pandesandip062@gmail.com'
}
}
stage('Test')
{
steps{
echo "Testing the code....."
bat "mvn test"
}
}
stage('Compile')
{
steps{
echo "Compiling the code......"
bat "mvn compile"
}
}
stage('Deploy')
{
steps{
echo"Deploying the code"
}
}
stage('Email Notification'){
  mail bcc: '', body: 'Hi Sabdio', cc: '', from: '', replyTo: '', subject: 'Jenkins job', to: 'pandesandip062@gmail.com'
}
}
